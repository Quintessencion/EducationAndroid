<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="TextDefault">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearanceHeadline">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearanceDescriptionAction" parent="TextDefault">
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceProfileFriends" parent="TextDefault">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceHeadline">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/silver_dark</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceContent" parent="TextDefault">
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/silver_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceDate" parent="TextDefault">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearanceFIO" parent="TextDefault">
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearanceHistory" parent="TextAppearanceFIO">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceDescription" parent="TextAppearanceDate">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextAppearanceProfileContent" parent="TextAppearanceFIO">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceProfileButton" parent="TextDefault">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceLink" parent="TextAppearanceDescriptionAction">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppearanceHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="AppearanceControlActive" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/green</item>
    </style>

    <!--Dialog styles -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:dividerHeight">-1dp</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--<item name="android:background">@android:color/white</item>-->
        <item name="android:height">73dp</item>
    </style>

</resources>
