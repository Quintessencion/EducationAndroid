<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/news_card_view"
    style="@style/ViewPadding8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/image_news"
            style="@style/ViewPadding4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/img" />

        <ImageView
            android:id="@+id/image_white_noise"
            style="@style/ViewPadding4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/fade" />

        <TextView
            android:id="@+id/news_headline"
            style="@style/LateralPadding26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="208dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:text="Спонсоры отремонтируют школу-интернат"
            android:textColor="@color/silver_dark"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_decor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_headline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/decor" />

        <TextView
            android:id="@+id/news_content"
            style="@style/LateralPadding26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_decor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:text="Дубовская школа-интернат для детей с ограниченными возможностями здоровья стала первой в области …"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/news_content"
            android:layout_marginTop="16dp"
            android:background="@color/green"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_calendar" />

            <TextView
                android:id="@+id/expiration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:paddingTop="4dp"
                android:text="Осталось 13 дней (21.09 – 20.10)"
                android:textColor="@color/white_70"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>