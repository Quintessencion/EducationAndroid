<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="@android:color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            app:theme="@style/ToolbarColoredBackArrow">

            <TextView
                android:id="@+id/title_toolbar"
                style="@style/ToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                tools:text="Название какого-то события" />

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/name_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginEnd="106dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/silver_dark"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:text="Спонсоры отремонтируют школу-интернат" />

        <LinearLayout
            android:id="@+id/layout_expiration_date"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/name_event"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/icon_calendar_dark" />

            <TextView
                android:id="@+id/expiration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/grey_200"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="Осталось 13 дней (21.09 – 20.10)" />
        </LinearLayout>

        <TextView
            android:id="@+id/charitable_foundation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name_event"
            android:layout_below="@+id/layout_expiration_date"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/grey_300"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Благотворительный Фонд «Счастливый Мир»" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/charitable_foundation_name"
            android:layout_below="@+id/charitable_foundation_name"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/nav" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:textColor="#b3000000"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="Санкт-Петербург, Кирочная улица, д. 50А, каб. 208" />


        </LinearLayout>


    </RelativeLayout>
</ScrollView>